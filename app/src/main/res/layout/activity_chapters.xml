<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chapters_activity_view"
    android:background="@color/color_white"
    tools:context=".ChaptersActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_chapters_background"
        android:src="@drawable/round_view"
        android:contentDescription="@string/chapters_background_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView_chapters"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Toolbar
                android:id="@+id/toolbar_chapters"
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingHorizontal="30dp"
                android:layout_height="60dp"
                >
                <View
                    android:layout_width="2.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"
                    android:layout_marginVertical="12dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="6dp"
                    android:text="@string/app_name"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/color_white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </Toolbar>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gl_chapters_activity"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:rowCount="3"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:id="@+id/cv_chapter_one"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="#FFEB3B"
                    android:alpha="0.95"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:gravity="end"
                            android:text="@string/chapter_one"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            android:textSize="@dimen/chapters"
                            />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:src="@drawable/icon_idea"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="@string/chapter_one_name"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:id="@+id/cv_chapter_two"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="35dp"
                    app:cardBackgroundColor="#616161"
                    android:alpha="0.9"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:gravity="end"
                            android:text="@string/chapter_two"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            android:textSize="@dimen/chapters"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="2.5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:src="@drawable/icon_mars"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="@string/chapter_two_name"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/cv_chapter_three"
                    android:layout_margin="10dp"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="#00BCD4"
                    android:alpha="0.9"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:gravity="end"
                            android:text="@string/chapter_three"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            android:textSize="@dimen/chapters"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:src="@drawable/icon_comm_3"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="@string/chapter_three_name"
                            android:textColor="@color/color_white"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/cv_chapter_four"
                    android:layout_margin="10dp"
                    app:cardElevation="15dp"
                    app:cardBackgroundColor="#E64A19"
                    app:cardCornerRadius="30dp"
                    android:alpha="0.9"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:gravity="end"
                            android:text="@string/chapter_four"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            android:textSize="@dimen/chapters"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:src="@drawable/icon_rocket_2"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="@string/chapter_four_name"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:id="@+id/cv_chapter_five"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="#D32F2F"
                    android:alpha="0.9"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:gravity="end"
                            android:text="@string/chapter_five"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            android:textSize="@dimen/chapters"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:src="@drawable/icon_success"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="@string/chapter_five_name"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:textColor="@color/color_white"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/cv_chapter_six"
                    android:layout_margin="10dp"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="#009688"
                    android:alpha="0.9"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:gravity="end"
                            android:text="@string/chapter_six"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            android:textSize="@dimen/chapters"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:src="@drawable/icon_search"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="@string/chapter_six_name"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:textColor="@color/color_white"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

